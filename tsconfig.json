{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2017",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "sourceMap": true,
        "removeComments": true,
        "esModuleInterop": true,
        "strictBindCallApply": false,
        "outDir": "./dist",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "paths": {
            "@api/*": ["api/*"],
            "@config/*": ["config/*"],
        },

        "typeRoots": [
            "src/types.d.ts",
            "./node_modules/@types"
          ]
    },
    "ts-node": {
        "swc": true
    },
    "exclude": ["node_modules", "dist"],
}